{
  "name": "Troca Cor - Boticário",
  "description": "Extensão que muda a cor da barra de navegação do site O Boticário.",
  "version": "1.0",
  "manifest_version": 3,
  "author": "Iuri Dias",
  "icons": {
    "16": "./icons/icon_16.png",
    "32": "./icons/icon_32.png",
    "64": "./icons/icon_64.png",
    "128": "./icons/icon_128.png"
  },
  "action": {
    "default_title": "Troca cor - Boticário",
    "default_popup": "./popup/popup.html",
    "default_icon": "./icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./scripts/content.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}